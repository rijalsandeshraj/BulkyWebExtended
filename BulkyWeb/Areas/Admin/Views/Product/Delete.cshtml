@using BulkyWeb.Models.Models
@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <input asp-for="Id" hidden />
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0 mb-2"></label>
                    <input asp-for="Title" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0 mb-2"></label>
                    <textarea asp-for="Description" disabled class="form-control mb-1"></textarea>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0 mb-2"></label>
                    <input asp-for="ISBN" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0 mb-2"></label>
                    <input asp-for="Author" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0 mb-2"></label>
                    <input asp-for="ListPrice" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0 mb-2"></label>
                    <input asp-for="Price" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0 mb-2"></label>
                    <input asp-for="Price50" disabled class="form-control mb-1" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0 mb-2"></label>
                    <input asp-for="Price100" disabled class="form-control mb-1" />
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}